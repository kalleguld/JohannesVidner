@using Resources
<ul class="nav navbar-nav navbar-right">
    @if (@Session.GetCurrentUser() == null)
    {
        <li>@Html.ActionLink(langResources.Views_Shared__LoginPartial_login, "Login", "Home", null, new {id = "loginLink"})</li>
    }
    else
    {
        <li>@Html.ActionLink(Session.GetCurrentUser().Username, "Index", "Home")</li>
        <li>@Html.ActionLink(langResources.Views_Shared__LoginPartial_logoff, "Logoff", "Home")</li>
    }
</ul>
