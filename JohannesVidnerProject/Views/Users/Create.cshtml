@model JohannesVidnerProject.Models.CreateUserViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Create New User</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="control-label col-md-2">Username</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Password</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Name</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Write access to publications</div>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.WriteAccess)
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">User Adinistrator</div>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.UserAdmin)
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Workplace</div>
            <div class="col-md-10">
                @Html.DropDownListFor(pub => pub.SelectedPublicationId, Model.AllowedPublications)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
