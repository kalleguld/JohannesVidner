@using Resources
@model System.Collections.Generic.IEnumerable<JohannesVidnerProject.Models.Users.ListUsersViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>@langResources.Views_Users_Index_users</h2>

<p>
    @Html.ActionLink(langResources.Views_Users_Index_createNewUser, langResources.Views_Users_Index_create)
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Workplace)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Workplace)
            </td>
            <td>
                @Html.ActionLink(langResources.Views_Users_Index_edit, "Edit", new { id=item.Id }) |
                @Html.ActionLink(langResources.Views_Users_Index_delete, "Delete", new { id=item.Id })
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink(langResources.Views_Users_Index_createNewUser, "Create")
</p>
